    <section class="contact">
        <h1 class="text-center">Donor's Registeration Form</h1>
        <div class="form"><form action="/Signupd" method="POST">
            <input class="form-input" type="text" name="dname" id="name" placeholder="Enter your name">
            <input class="form-input" type="email" name="demail" id="email" placeholder="Enter your E-mail" required>
            <input class="form-input" type="phone" name="dphone" id="phone" placeholder="Enter your Phone Number" required>
            
            <label for="bloodgroup">Choose your Blood Group:</label>
            <select name="bloodgroup" id="bloodgroup">
                <option value="Ap">A+</option>
