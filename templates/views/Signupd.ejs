                <option value="ABn">AB-</option>
            </select>
            
            <input type="date" class="form-input" name="DOB" id="dob" placeholder="Enter your Date of Birth">
            <textarea class="form-input" name="address" id="address" cols="59" class="form-input" rows="10" placeholder="Enter you Proper Address"></textarea>
            
            <label for="state">Choose your State:</label>
            <select name="state" id="state">
